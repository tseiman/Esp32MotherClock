{
	"sections": [
		{ "name": "network" , "caption": "Network"  , "icon": "client"},
		{ "name": "clock"   , "caption": "Clock"    , "icon": "clock-b"},
		{ "name": "security", "caption": "Security" , "icon": "shield"}

	],
	"items": {
		"username": 		{"section": "security", "type": "text",     "regexcheck" : ".[-_a-zA-Z0-9]{4,}"},
		"password1": 		{"section": "security", "type": "password", "regexcheck" : ".{8,}"},
		"password2": 		{"section": "security", "type": "password", "regexcheck" : ".{8,}", "depends": "equals(password1)"},
		"certificate-key": 	{"section": "security", "type": "textbox", 	"regexcheck" : ".+"},
		"certificate": 		{"section": "security", "type": "textbox", 	"regexcheck" : ".+"},
		"dhcp": 			{"section": "network", 	"type": "checkbox" },
		"address" : 		{"section": "network",  "type": "text",     "regexcheck"  : "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$", "depends": "boolDepened(dhcp,false)"},
		"netmask" : 		{"section": "network",  "type": "text",     "regexcheck"  : "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$", "depends": "boolDepened(dhcp,false)"},
		"gw"      : 		{"section": "network",  "type": "text",     "regexcheck"  : ".+", 								"depends": "boolDepened(dhcp,false)"},
		"dns1"    : 		{"section": "network",  "type": "text",     "regexcheck"  : "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$", "depends": "boolDepened(dhcp,false)"},
		"dns2"    : 		{"section": "network",  "type": "text",     "regexcheck"  : "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$", "depends": "boolDepened(dhcp,false)"},
		"ntp": 			    {"section": "clock", 	"type": "checkbox" },
		"time"    : 		{"section": "clock",    "type": "text",     "regexcheck"  : "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$", "depends": "boolDepened(ntp,false)"},
		"date"    : 		{"section": "clock",    "type": "text",     "regexcheck"  : "^(0[1-9]|[12][0-9]|3[01])[.](0[1-9]|1[012])[.](19|20)[0-9]{2}$", "depends": "boolDepened(ntp,false)"},
		"ntpserver"   :		{"section": "clock",    "type": "text",     "regexcheck"  : ".*", "depends": "boolDepened(ntp,true)"}


	},
	"i18n": {
		"en": {
			"username" 			: {"caption": "Username"         , "hint": "at least 4 characters in &quot;-,_,0-9,a-z,A-Z&quot;"},
			"password1" 		: {"caption": "Password"         , "hint": "at least 8 characters"},
			"password2" 		: {"caption": "Repeat Password"  , "hint": "at least 8 characters"},
			"certificate-key" 	: {"caption": "Certificate key"  , "hint": "A valid PEM ASCII certificate private key"},
			"certificate" 		: {"caption": "Certificate"      , "hint": "A valid PEM ASCII certificate"},
			"dhcp"				: {"caption": "Use DHCP"         , "hint": "Instead of static IP addressing - use DHCP"},
			"address"  			: {"caption": "IP Address"       , "hint": "a valid host IP Address e.g. 192.168.0.1"},
			"netmask"  			: {"caption": "Netmask"          , "hint": "a valid netmask e.g. 255.255.255.0"},
			"gw"       			: {"caption": "Default Gateway"  , "hint": "a Gateway hostname or IP address"},
			"dns1"     			: {"caption": "primary DNS IP"   , "hint": "a valid DNS IP Address e.g. 8.8.8.8"},
			"dns2"     			: {"caption": "secondary DNS IP" , "hint": "a valid DNS IP Address e.g. 8.8.8.8"},
			"ntp"     			: {"caption": "Use SNTP"    	 , "hint": "Use Simple NTP"},
			"time"     			: {"caption": "Time"    		 , "hint": "time in 24h format HH:MM:SS"},
			"date"     			: {"caption": "Date"     		 , "hint": "date in dd.mm.yyyy format"},
			"ntpserver"     	: {"caption": "NTP server"       , "hint": "a NTP server hostname or IP address"}

		}
	}
}
